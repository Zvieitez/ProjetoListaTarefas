 @model List<Usuario>

<h2>Relação de Usuários</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar Usuário</a>
    <a asp-action="Create" class="btn btn-secondary">Voltar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Usuário Id</th>
            <th>Nome do Usuário</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.UsuarioId</td>
                <td>@usuario.NomeUsuario</td>
                <td>
                    <a asp-action="Detalhes" class="btn btn-info" asp-route-id="@usuario.UsuarioId">Detalhes</a>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@usuario.UsuarioId">Editar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@usuario.UsuarioId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

