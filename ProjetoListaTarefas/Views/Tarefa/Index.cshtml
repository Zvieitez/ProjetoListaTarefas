 @model List<Tarefa>

<h2>Lista de Tarefas</h2>

<p>
    <a asp-action="Create">Adicionar Tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>TatefaId</th>
            <th>NomeTarefa</th>
            <th>Descricao</th>
            <th>DtInicio</th>
            <th>DtFim</th>
            <th>StatusTarefa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.TarefaId</td>
                <td>@tarefa.NomeTarefa</td>
                <td>@tarefa.Descricao</td>
                <td>@tarefa.DtInicio</td>
                <td>@tarefa.DtFim</td>
                <td>@tarefa.StatusTarefa</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@tarefa.TarefaId">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@tarefa.TarefaId">Editar</a>
                    <a asp-action="Delete" asp-route-id="@tarefa.TarefaId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

